    <!-- نافذة سحب الرصيد -->
    <div class="withdraw-modal" id="withdraw-modal">
        <div class="withdraw-content">
            <span class="close" id="close-withdraw">&times;</span>
            <h2 class="section-title"><i class="fas fa-money-bill-wave"></i> سحب الرصيد</h2>
            <div class="form-group">
                <label for="withdraw-amount">المبلغ المسحوب:</label>
                <input type="number" id="withdraw-amount" min="1" value="0">
            </div>
            <button class="btn-success" id="confirm-withdraw">تأكيد السحب</button>
