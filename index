    <script>
        // بيانات التطبيق
        let users = {};
        let currentUser = null;
        let rechargeCodes = {};
        let userCreatedCodes = {};
        let currentWithdrawCode = "";
        
        // تهيئة الصفحة
        document.addEventListener('DOMContentLoaded', function() {
            // تعبئة خيارات العمر
            const ageSelect = document.getElementById('age');
            for (let i = 0; i <= 100; i++) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = i;
                ageSelect.appendChild(option);
            }
            
            // تحميل المستخدمين من التخزين المحلي إن وجد
            if (localStorage.getItem('users')) {
                users = JSON.parse(localStorage.getItem('users'));
                updateUsersList();
            }
            
            // إعداد أكواد الشحن
            rechargeCodes = {
                "XJ7S9": { amount: 10, used: false, creator: null },
                "L3K8D": { amount: 20, used: false, creator: null },
                "P2Q6R": { amount: 50, used: false, creator: null },
                "M9N4B": { amount: 100, used: false, creator: null }
            };
            
            // إعداد event listeners
            setupEventListeners();
        });
        
        // إعداد مستمعي الأحداث
        function setupEventListeners() {
            // روابط التنقل
            document.getElementById('register-link').addEventListener('click', function(e) {
                e.preventDefault();
                showSection('register-section');
            });
            
            document.getElementById('recharge-link').addEventListener('click', function(e) {
                e.preventDefault();
                if (!currentUser) {
                    showNotification("يجب إنشاء حساب أولاً", "error");
                    showSection('register-section');
                    return;
                }
                showSection('recharge-section');
                updateUserCodesList();
            });
            
            document.getElementById('games-link').addEventListener('click', function(e) {
                e.preventDefault();
                if (!currentUser) {
                    showNotification("يجب إنشاء حساب أولاً", "error");
                    showSection('register-section');
                    return;
                }
                showSection('games-section');
                updateGamesBalance();
            });
            
            document.getElementById('store-link').addEventListener('click', function(e) {
                e.preventDefault();
                if (!currentUser) {
                    showNotification("يجب إنشاء حساب أولاً", "error");
                    showSection('register-section');
                    return;
                }
                showSection('store-section');
                document.getElementById('store-balance').textContent = currentUser.balance;
            });
            
            document.getElementById('account-link').addEventListener('click', function(e) {
                e.preventDefault();
                if (!currentUser) {
                    showNotification("يجب إنشاء حساب أولاً", "error");
                    showSection('register-section');
                    return;
                }
                showUserSection();
            });
            
            // زر التسجيل
            document.getElementById('register-btn').addEventListener('click', registerUser);
            
            // إضافة رصيد
            document.getElementById('add-balance').addEventListener('click', function() {
                document.getElementById('recharge-popup').style.display = 'block';
            });
            
            // تطبيق كود الشحن
            document.getElementById('apply-recharge-code').addEventListener('click', applyRechargeCode);
            
            // إنشاء كود جديد
            document.getElementById('generate-code').addEventListener('click', generateNewCode);
            
            // حذف الحساب
            document.getElementById('delete-account').addEventListener('click', deleteAccount);
            
            // سحب الرصيد
            document.getElementById('withdraw-balance').addEventListener('click', showWithdrawModal);
            document.getElementById('confirm-withdraw').addEventListener('click', withdrawBalance);
            document.getElementById('close-withdraw').addEventListener('click', function() {
                document.getElementById('withdraw-modal').style.display = 'none';
            });
            
            // أزرار الألعاب
            document.getElementById('dice-game-btn').addEventListener('click', function() {
                showSection('dice-game');
                document.getElementById('dice-balance').textContent = currentUser.balance;
            });
            
            document.getElementById('airplane-game-btn').addEventListener('click', function() {
                showSection('airplane-game');
                document.getElementById('airplane-balance').textContent = currentUser.balance;
            });
            
            // لعب النرد
            document.getElementById('play-dice').addEventListener('click', playDice);
            
            // لعب الطائرة
            document.getElementById('play-airplane').addEventListener('click', playAirplane);
            
            // شراء منتجات
            const buyButtons = document.querySelectorAll('.buy-btn');
            buyButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const product = this.getAttribute('data-product');
                    const price = parseInt(this.getAttribute('data-price'));
                    buyProduct(product, price);
                });
            });
        }
        
        // تحديث قائمة المستخدمين
        function updateUsersList() {
            const usersList = document.getElementById('users-list');
            usersList.innerHTML = '';
            
            for (const username in users) {
                const userBtn = document.createElement('button');
                userBtn.className = 'user-btn';
                userBtn.textContent = username;
                if (currentUser && currentUser.name === username) {
                    userBtn.classList.add('active');
                }
                
                userBtn.addEventListener('click', function() {
                    switchUser(username);
                });
                
                usersList.appendChild(userBtn);
            }
        }
        
        // تبديل المستخدم
        function switchUser(username) {
            currentUser = users[username];
            showNotification(`تم التبديل إلى المستخدم: ${username}`, "success");
            showUserSection();
        }
        
        // عرض قسم معين وإخفاء الآخرين
        function showSection(sectionId) {
            // إخفاء جميع الأقسام
            const sections = document.querySelectorAll('.section, .store-section');
            sections.forEach(section => {
                section.style.display = 'none';
            });
            
            // عرض القسم المطلوب
            document.getElementById(sectionId).style.display = 'block';
        }
        
        // عرض إشعار
        function showNotification(message, type) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        // تسجيل المستخدم
        function registerUser() {
            const username = document.getElementById('username').value;
            const age = parseInt(document.getElementById('age').value);
            
            if (!username || isNaN(age)) {
                showNotification("يرجى إدخال اسم وعمر صحيحين", "error");
                return;
            }
            
            if (age < 18) {
                document.getElementById('age-warning').style.display = 'block';
                return;
            }
            
            // التحقق إذا كان المستخدم موجوداً مسبقاً
            if (users[username]) {
                showNotification("اسم المستخدم موجود مسبقاً", "error");
                return;
            }
            
            // عرض رسالة التحميل
            document.getElementById('register-loading').style.display = 'block';
            document.getElementById('register-btn').disabled = true;
            
            // محاكاة عملية التسجيل
            setTimeout(() => {
                const newUser = {
                    name: username,
                    age: age,
                    balance: 0,
                    createdCodes: {}
                };
                
                users[username] = newUser;
                currentUser = newUser;
                
                // حفظ المستخدمين في التخزين المحلي
                localStorage.setItem('users', JSON.stringify(users));
                
                document.getElementById('age-warning').style.display = 'none';
                document.getElementById('register-loading').style.display = 'none';
                document.getElementById('register-btn').disabled = false;
                document.getElementById('username').value = "";
                document.getElementById('age').value = "";
                
                updateUsersList();
                showNotification("تم إنشاء حسابك بنجاح!", "success");
                showUserSection();
            }, 2000);
        }
        
        // عرض قسم المستخدم
        function showUserSection() {
            document.getElementById('user-name').textContent = currentUser.name;
            document.getElementById('user-age').textContent = `العمر: ${currentUser.age}`;
            document.getElementById('user-balance').textContent = currentUser.balance;
            document.getElementById('recharge-popup').style.display = 'none';
            document.getElementById('withdraw-result').style.display = 'none';
            
            showSection('user-section');
        }
        
        // تطبيق كود الشحن
        function applyRechargeCode() {
            const code = document.getElementById('recharge-code-input').value.trim().toUpperCase();
            
            if (!code) {
                showNotification("يرجى إدخال كود الشحن", "error");
                return;
            }
            
            if (code.length !== 5) {
                showNotification("كود الشحن يجب أن يتكون من 5 أحرف/أرقام", "error");
                return;
            }
            
            if (!rechargeCodes[code]) {
                showNotification("كود الشحن غير صحيح", "error");
                return;
            }
            
            if (rechargeCodes[code].used) {
                showNotification("كود الشحن هذا تم استخدامه مسبقاً", "error");
                return;
            }
            
            const amount = rechargeCodes[code].amount;
            
            // زيادة الرصيد مع تأثير متحرك
            const targetBalance = currentUser.balance + amount;
            const startBalance = currentUser.balance;
            const duration = 1500; // 1.5 ثانية
            const startTime = Date.now();
            
            const animateBalance = () => {
                const currentTime = Date.now();
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                currentUser.balance = Math.floor(startBalance + (amount * progress));
                document.getElementById('user-balance').textContent = currentUser.balance;
                
                if (progress < 1) {
                    requestAnimationFrame(animateBalance);
                } else {
                    currentUser.balance = targetBalance;
                    document.getElementById('user-balance').textContent = currentUser.balance;
                    rechargeCodes[code].used = true;
                    document.getElementById('recharge-code-input').value = "";
                    
                    // حفظ التغييرات
                    localStorage.setItem('users', JSON.stringify(users));
                    
                    showNotification(`تم شحن مبلغ ${amount}$ بنجاح!`, "success");
                }
            };
            
            animateBalance();
        }
        
        // إنشاء كود شحن جديد
        function generateNewCode() {
            const amount = parseInt(document.getElementById('new-code-amount').value);
            
            if (isNaN(amount) || amount <= 0) {
                showNotification("يرجى إدخال قيمة صحيحة للكود", "error");
                return;
            }
            
            // إنشاء كود عشوائي مكون من 5 أحرف/أرقام
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let code = '';
            
            for (let i = 0; i < 5; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            
            // إضافة الكود إلى النظام
            rechargeCodes[code] = {
                amount: amount,
                used: false,
                creator: currentUser.name
            };
            
            // إضافة الكود إلى المستخدم
            currentUser.createdCodes[code] = {
                amount: amount,
                used: false
            };
            
            // حفظ التغييرات
            localStorage.setItem('users', JSON.stringify(users));
            
            // عرض الكود المنشأ
            document.getElementById('generated-code').textContent = code;
            document.getElementById('generated-amount').textContent = amount;
            document.getElementById('new-code-result').style.display = 'block';
            
            // تحديث قائمة الأكواد
            updateUserCodesList();
            
            showNotification("تم إنشاء الكود بنجاح!", "success");
        }
        
        // نسخ الكود المنشأ
        function copyGeneratedCode() {
            const code = document.getElementById('generated-code').textContent;
            navigator.clipboard.writeText(code).then(() => {
                showNotification("تم نسخ الكود إلى الحافظة", "success");
            });
        }
        
        // نسخ كود السحب
        function copyWithdrawCode() {
            navigator.clipboard.writeText(currentWithdrawCode).then(() => {
                showNotification("تم نسخ كود السحب إلى الحافظة", "success");
            });
        }
        
        // تحديث قائمة أكواد المستخدم
        function updateUserCodesList() {
            const codesList = document.getElementById('user-codes-list');
            codesList.innerHTML = '';
            
            for (const code in currentUser.createdCodes) {
                const codeData = currentUser.createdCodes[code];
                
                const codeItem = document.createElement('div');
                codeItem.className = 'code-item-management';
                
                codeItem.innerHTML = `
                    <div>
                        <div class="code-value" ondblclick="copyCode('${code}')">${code}</div>
                        <div class="code-amount">${codeData.amount}$</div>
                    </div>
                    <div>
                        <span>${codeData.used ? 'مستخدم' : 'غير مستخدم'}</span>
                        ${!codeData.used ? `<button class="btn-danger" data-code="${code}">حذف</button>` : ''}
                    </div>
                `;
                
                codesList.appendChild(codeItem);
            }
            
            // إضافة مستمعي الأحداث لأزرار الحذف
            const deleteButtons = document.querySelectorAll('.code-item-management .btn-danger');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const codeToDelete = this.getAttribute('data-code');
                    deleteCode(codeToDelete);
                });
            });
        }
        
        // نسخ كود من القائمة
        function copyCode(code) {
            navigator.clipboard.writeText(code).then(() => {
                showNotification("تم نسخ الكود إلى الحافظة", "success");
            });
        }
        
        // حذف كود
        function deleteCode(code) {
            if (confirm("هل أنت متأكد من أنك تريد حذف هذا الكود؟")) {
                delete rechargeCodes[code];
                delete currentUser.createdCodes[code];
                
                // حفظ التغييرات
                localStorage.setItem('users', JSON.stringify(users));
                
                updateUserCodesList();
                showNotification("تم حذف الكود بنجاح", "success");
            }
        }
        
        // حذف الحساب
        function deleteAccount() {
            if (confirm("هل أنت متأكد من أنك تريد حذف حسابك؟ سيتم فقدان جميع بياناتك ورصيدك.")) {
                delete users[currentUser.name];
                
                // حفظ التغييرات
                localStorage.setItem('users', JSON.stringify(users));
                
                if (Object.keys(users).length > 0) {
                    // التبديل إلى أول مستخدم متبقي
                    const firstUser = Object.keys(users)[0];
                    currentUser = users[firstUser];
                    updateUsersList();
                    showUserSection();
                } else {
                    currentUser = null;
                    showSection('register-section');
                }
                
                showNotification("تم حذف حسابك بنجاح", "success");
            }
        }
        
        // تحديث رصيد الألعاب
        function updateGamesBalance() {
            document.getElementById('games-balance').textContent = currentUser.balance;
        }
        
        // عرض نافذة سحب الرصيد
        function showWithdrawModal() {
            if (currentUser.balance <= 0) {
                showNotification("لا يوجد رصيد enough للسحب", "error");
                return;
            }
            
            document.getElementById('withdraw-amount').value = currentUser.balance;
            document.getElementById('withdraw-amount').max = currentUser.balance;
            
            document.getElementById('withdraw-modal').style.display = 'flex';
        }
        
        // سحب الرصيد
        function withdrawBalance() {
            const amount = parseInt(document.getElementById('withdraw-amount').value);
            
            if (amount > currentUser.balance) {
                showNotification("المبلغ المطلوب سحبه أكبر من رصيدك الحالي", "error");
                return;
            }
            
            // إنشاء كود سحب عشوائي مكون من 5 أحرف/أرقام
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let code = '';
            
            for (let i = 0; i < 5; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            
            currentWithdrawCode = code;
            
            // إضافة الكود إلى النظام
            rechargeCodes[code] = {
                amount: amount,
                used: false,
                creator: currentUser.name,
                isWithdrawCode: true
            };
            
            // سحب الرصيد مع تأثير العد التنازلي
            const startBalance = currentUser.balance;
            const targetBalance = startBalance - amount;
            const duration = 2000; // 2 ثانية
            const startTime = Date.now();
            
            const animateWithdraw = () => {
                const currentTime = Date.now();
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                currentUser.balance = Math.floor(startBalance - (amount * progress));
                document.getElementById('user-balance').textContent = currentUser.balance;
                
                if (progress < 1) {
                    requestAnimationFrame(animateWithdraw);
                } else {
                    currentUser.balance = targetBalance;
                    document.getElementById('user-balance').textContent = currentUser.balance;
                    
                    // حفظ التغييرات
                    localStorage.setItem('users', JSON.stringify(users));
                    
                    // عرض كود السحب
                    document.getElementById('withdraw-code-value').textContent = code;
                    document.getElementById('withdraw-result').style.display = 'block';
                    document.getElementById('withdraw-modal').style.display = 'none';
                    
                    showNotification(`تم سحب مبلغ ${amount}$ بنجاح! استخدم الكود لإضافة الرصيد إلى حساب آخر.`, "success");
                }
            };
            
            animateWithdraw();
        }
        
        // شراء منتج
        function buyProduct(product, price) {
            if (price > currentUser.balance) {
                showNotification("لا يوجد رصيد كافٍ لشراء هذا المنتج", "error");
                return;
            }
            
            // شراء المنتج مع تأثير العد التنازلي
            const startBalance = currentUser.balance;
            const targetBalance = startBalance - price;
            const duration = 2000; // 2 ثانية
            const startTime = Date.now();
            
            const animatePurchase = () => {
                const currentTime = Date.now();
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                currentUser.balance = Math.floor(startBalance - (price * progress));
                document.getElementById('user-balance').textContent = currentUser.balance;
                document.getElementById('store-balance').textContent = currentUser.balance;
                
                if (progress < 1) {
                    requestAnimationFrame(animatePurchase);
                } else {
                    currentUser.balance = targetBalance;
                    document.getElementById('user-balance').textContent = currentUser.balance;
                    document.getElementById('store-balance').textContent = currentUser.balance;
                    
                    // حفظ التغييرات
                    localStorage.setItem('users', JSON.stringify(users));
                    
                    showNotification(`تم شراء ${product} بنجاح!`, "success");
                }
            };
            
            animatePurchase();
        }
        
        // لعبة النرد
        function playDice() {
            const betAmount = parseInt(document.getElementById('bet-amount-dice').value);
            const choice = document.getElementById('dice-choice').value;
            
            if (betAmount > currentUser.balance) {
                showNotification("المبلغ المراهن به أكبر من رصيدك الحالي", "error");
                return;
            }
            
            // إضافة تأثير الهز للنرد
            const dice1 = document.getElementById('dice1');
            const dice2 = document.getElementById('dice2');
            
            dice1.classList.add('rolling');
            dice2.classList.add('rolling');
            
            // تعطيل زر اللعب أثناء الدوران
            document.getElementById('play-dice').disabled = true;
            
            // محاكاة رمي النرد بعد التأثير
            setTimeout(() => {
                // رمي النرد
                const dice1Value = Math.floor(Math.random() * 6) + 1;
                const dice2Value = Math.floor(Math.random() * 6) + 1;
                const sum = dice1Value + dice2Value;
                
                // عرض نتيجة النرد
                dice1.textContent = dice1Value;
                dice2.textContent = dice2Value;
                
                // إزالة تأثير الهز
                dice1.classList.remove('rolling');
                dice2.classList.remove('rolling');
                
                // تمكين زر اللعب
                document.getElementById('play-dice').disabled = false;
                
                // تحديد الفوز
                let win = false;
                let multiplier = 1;
                
                if (choice === 'even' && sum % 2 === 0) {
                    win = true;
                    multiplier = 2;
                } else if (choice === 'odd' && sum % 2 !== 0) {
                    win = true;
                    multiplier = 2;
                } else if (choice === '7' && sum === 7) {
                    win = true;
                    multiplier = 4;
                }
                
                // معالجة النتيجة
                if (win) {
                    const winAmount = betAmount * multiplier;
                    currentUser.balance += winAmount;
                    showNotification(`مبروك! لقد فزت بـ ${winAmount}$ (مجموع النرد: ${sum})`, "success");
                } else {
                    currentUser.balance -= betAmount;
                    showNotification(`للأسف! لقد خسرت ${betAmount}$ (مجموع النرد: ${sum})`, "error");
                }
                
                // حفظ التغييرات
                localStorage.setItem('users', JSON.stringify(users));
                
                // تحديث الرصيد
                document.getElementById('user-balance').textContent = currentUser.balance;
                document.getElementById('dice-balance').textContent = currentUser.balance;
            }, 1000);
        }
        
        // لعبة الطائرة
        function playAirplane() {
            const betAmount = parseInt(document.getElementById('bet-amount-airplane').value);
            const choice = document.getElementById('airplane-choice').value;
            
            if (betAmount > currentUser.balance) {
                showNotification("المبلغ المراهن به أكبر من رصيدك الحالي", "error");
                return;
            }
            
            // تحريك الطائرة
            const airplane = document.getElementById('airplane');
            airplane.style.top = '80px';
            
            // تعطيل زر اللعب أثناء الحركة
            document.getElementById('play-airplane').disabled = true;
            
            // تحديد نتيجة عشوائية
            const result = Math.random() > 0.5 ? 'up' : 'down';
            
            // تحريك الطائرة بناءً على النتيجة
            setTimeout(() => {
                if (result === 'up') {
                    airplane.style.top = '20px';
                } else {
                    airplane.style.top = '140px';
                }
                
                // تمكين زر اللعب بعد الحركة
                setTimeout(() => {
                    document.getElementById('play-airplane').disabled = false;
                    
                    // تحديد الفوز
                    const win = choice === result;
                    
                    // معالجة النتيجة
                    if (win) {
                        const winAmount = betAmount * 2;
                        currentUser.balance += winAmount;
                        showNotification(`مبروك! لقد فزت بـ ${winAmount}$ (اتجاه الطائرة: ${result === 'up' ? 'عالٍ' : 'منخفض'})`, "success");
                    } else {
                        currentUser.balance -= betAmount;
                        showNotification(`للأسف! لقد خسرت ${betAmount}$ (اتجاه الطائرة: ${result === 'up' ? 'عالٍ' : 'منخفض'})`, "error");
                    }
                    
                    // حفظ التغييرات
                    localStorage.setItem('users', JSON.stringify(users));
                    
                    // تحديث الرصيد
                    document.getElementById('user-balance').textContent = currentUser.balance;
                    document.getElementById('airplane-balance').textContent = currentUser.balance;
                }, 600);
            }, 100);
        }
    </script>
</body>
</html>
